{
  "manifest_version": 3,
  "name": "CuraQ Saver",
  "version": "1.0.0",
  "description": "現在開いている記事をCuraQに保存します。ログインウォールのある記事にも対応。",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://curaq.pages.dev/*",
    "http://localhost:5173/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/readability.js",
        "libs/turndown.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "CuraQに保存"
  }
}
